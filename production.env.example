# KODAN Environment Configuration Template
# Copy this file to production.env and fill in your actual values

# Database Configuration
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=database
POSTGRES_PORT=5432

# KODAN Core Settings
KHOJ_DJANGO_SECRET_KEY=your-production-secret-key-change-this
KHOJ_DEBUG=False
KHOJ_ADMIN_EMAIL=your-email@kodan.space
KHOJ_ADMIN_PASSWORD=change-this-password
KHOJ_NO_HTTPS=False
KHOJ_DOMAIN=kodan.space
KHOJ_TELEMETRY_DISABLE=True

# AI Model Configuration
OPENAI_BASE_URL=https://openrouter.ai/api/v1
KHOJ_DEFAULT_CHAT_MODEL=google/gemini-2.5-pro-latest
OPENAI_API_KEY=your-openrouter-api-key-here

# Optional: Additional AI Services
JINA_API_KEY=your-jina-api-key-here
# GEMINI_API_KEY=your-gemini-api-key-here
# ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Service URLs
KHOJ_TERRARIUM_URL=http://sandbox:8080
KHOJ_SEARXNG_URL=http://search:8080

# n8n Configuration
WEBHOOK_URL=https://n8n.kodan.space
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=https
N8N_SECURE_COOKIE=false

# Telegram Bot (add your token)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
